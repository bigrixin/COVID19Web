                <hr />

            } *@

                       

                        if (Model.NSWCount != null)
                        {
                            @:<p>
                                @:<b>NSW Total confirmed cases: </b>  <b style="color:red;font-size:medium">
                                    @Model.NSWCount @:
                                @:</b>
                            @:</p>
                            <p>Search time: @DateTime.Now.ToString("dd/MM/yyyy hh:mm:ss tt")</p>
                        }
                        else
                        {

                        <br />
                           <b># Case in NSW #</b>

                            @:<p align="center" style="padding-right:1em"><a href="https://www.nsw.gov.au/covid-19/find-the-facts-about-covid-19#nsw-covid-19-statistics" target="_blank"><img src="https://www.nsw.gov.au/sites/default/files/inline-images/brand_guidelines_nsw_government_logo.jpg" height="80"></a></p>
          
                            <hr />
                            <p><b># Case in Australia #</b></p>

                            @*<img src=@Model.AustraliaAndWorldCaseStatisticsVM.AustraliaCasesGraphLink class="img-responsive" alt="source: health.nsw.gov.au">*@

                            if (Model.AustraliaAndWorldCaseStatisticsVM != null)
                            {
                                <br />
                                @:<p style="color:blue">@Model.AustraliaAndWorldCaseStatisticsVM.AustraliaCases</p>
                                @:<p style="color:blue">@Model.AustraliaAndWorldCaseStatisticsVM.DeathsCases</p>
                            }


                            @:<p align="center" style="padding-right:1em"><a href="https://www.health.gov.au/news/health-alerts/novel-coronavirus-2019-ncov-health-alert/coronavirus-covid-19-case-numbers-and-statistics#covid19-summary-statistics" target="_blank"><img src="https://www.health.gov.au/sites/default/themes/custom/health/images/DoHCrest.png" height="60"></a></p>
                            <br />

                            @:<span style="font-size:small"><br />Note: Because the data update time of each website is not synchronized, the display may be different.</span>


                        }
                    }

                </div>
            </div>
        }

    </div>
</div>